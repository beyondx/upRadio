	pthread_cancel
	pthread_join
	pthread_mutex_init
	pthread_mutex_destroy
	pthread_mutex_lock
	pthread_mutex_unlocl
	pthread_cond_init
	pthread_cond_destroy;
	pthread_cond_wait
	pthread_cond_boardcast
2.网络通信
	socket
	bind
	sendto
	recvfrom
	setsockopt
	broadcast
	multicast
3.网络协议

